<%-include('../partials/header')%>

<div class="container">

	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>Campgrounds from all over the world</p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
		</div>
	</header>

	<div class="row">
		<h1 class="col-lg-12">Our Most Popular Campgrounds</h1>
	</div>	
	<div class="d-flex row justify-content-around">
		<%campgrounds.forEach(function(campground){%>
		<div class="card col-md-5 col-lg-3 p-0 m-3 text-center">
			<img class="card-img-top" src="<%=campground.image%>">
			<div class="card-body">	
				<div class="card-title"><%=campground.name%></div>
<!-- 				<div class="card-text"><%=campground.description%></div> -->
				<a href="/campgrounds/<%=campground.id%>" class="btn btn-success">More Info</a>
			</div>
		</div>
		<%});%>
	</div>
</div>
<%-include('../partials/footer')%>